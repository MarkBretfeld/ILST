<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="ILST" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>de.bretfeld.ilst.stammdaten.entity.Leitstelle</class>
		<class>de.bretfeld.ilst.stammdaten.entity.Stadtteil</class>
		<class>de.bretfeld.ilst.stammdaten.entity.Stadt</class>
		<class>de.bretfeld.ilst.stammdaten.entity.Strasse</class>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/ilst" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.password" value="mark" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>